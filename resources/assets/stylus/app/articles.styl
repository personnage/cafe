.articleBlock
  margin-top 30px
  h2
    margin-bottom 25px
  .articlesRow
    .articlesRow__article
      @media (max-width 760px)
        padding 10px 0 5px
        border-bottom 2px solid border-color
        float none
        min-height 95px
        display inline-block
      .kind
        padding 6px 0 10px
        font-size 10px
        color main-color
        text-transform uppercase
        border-top 4px solid main-color
        display inline-block
        @media (max-width 760px)
          border none
          padding 0
      a
        font-size 17px
        line-height 24px
        color #0f345a
        @media (max-width 760px)
          border-bottom medium none
          display block
          font-size 15px
          font-weight bold
          line-height 18px
          margin-left 131px
          margin-bottom 10px
      img
        @media (max-width 760px)
          float left
          height 85px
          width 115px
          margin-right 15px
      table
        @media (max-width 760px)
          margin-bottom -10px
        td
          &:nth-child(1)
            @media (max-width 760px)
              left 131px
              position relative
              bottom 10px
          &:nth-child(2)
            @media (max-width 760px)
              display none
      p
        @media (max-width 760px)
          display none